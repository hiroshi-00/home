<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="mt-3 mb-3">新規会員登録</h3>

        <hr>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <div class="form-group row">
          <%= f.label :game_id, "", class: "col-md-5 col-form-label text-md-left" do %>
            ゲームID
            <span class="ml-1 samazon-require-input-label">
              <span class="samazon-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :game_id,
              class: "form-control #{"is-invalid" if resource.errors.messages[:game_id].present? } samazon-login-input",
              autofocus: "true",
              required: "",
              autocomplete: "game_id",
              placeholder: "000000"
            %>

            <% if resource.errors.messages[:game_id].present? %>
              <span class="samazon-error-message">
                <strong><%= resource.errors.full_messages_for(:game_id).first %></strong>
              </span>
            <% end %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :nickname, "", class: "col-md-5 col-form-label text-md-left" do %>
            名前
            <span class="ml-1 samazon-require-input-label">
              <span class="samazon-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :nickname,
              class: "form-control #{"is-invalid" if resource.errors.messages[:nickname].present? } samazon-login-input",
              autofocus: "true",
              required: "",
              autocomplete: "nickname",
              placeholder: "崩壊娘"
            %>

            <% if resource.errors.messages[:nickname].present? %>
              <span class="samazon-error-message">
                <strong><%= resource.errors.full_messages_for(:nickname).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :gender, "", class: "col-md-5 col-form-label text-md-left" do %>
            性別
            <span class="ml-1 samazon-require-input-label">
              <span class="samazon-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%= 
              f.select :gender, 
              {'男性': 1, '女性': 2, '未選択': 3}, 
              { prompt:"----" }, 
              { class: "form-control #{"is-invalid" if resource.errors.messages[:gender].present? } samazon-login-input",
                autofocus: "true", 
                required: "",
                autocomplete: "gender" } 
              %>

            <% if resource.errors.messages[:gender].present? %>
              <span class="samazon-error-message">
                <strong><%= resource.errors.full_messages_for(:gender).first %></strong>
              </span>
            <% end %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :birth, "", class: "col-md-5 col-form-label text-md-left" do %>
            生年月日
            <span class="ml-1 samazon-require-input-label">
              <span class="samazon-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%= 
              f.date_select :birth,{
                use_month_numbers: true,
                start_year: 1930, 
                end_year: (Time.now.year),
                default: Date.new(1989, 1, 1)
              },
              {class: "form-control #{"is-invalid" if resource.errors.messages[:game_id].present? } dateclass"}
            %>

            <% if resource.errors.messages[:birth].present? %>
              <span class="samazon-error-message">
                <strong><%= resource.errors.full_messages_for(:birth).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, "", class: "col-md-5 col-form-label text-md-left" do %>
          メールアドレス
            <span class="ml-1 samazon-require-input-label">
              <span class="samazon-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.email_field :email,
              class: "form-control #{"is-invalid" if resource.errors.messages[:email].present? } samazon-login-input",
              autofocus: "true",
              required: "",
              autocomplete: "email",
              placeholder: "メールアドレス"
            %>

            <% if resource.errors.messages[:email].present? %>
              <span class="samazon-error-message">
                <strong><%= resource.errors.full_messages_for(:email).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, "", class: "col-md-5 col-form-label text-md-left" do %>
          パスワード
            <span class="ml-1 samazon-require-input-label">
              <span class="samazon-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.password_field :password,
              class: "form-control #{ "is-invalid" if resource.errors.messages[:password].present? } samazon-login-input",
              autofocus: "true"
            %>
            <% if resource.errors.messages[:password].present? %>
            <span class="samazon-error-message">
              <strong><%= resource.errors.full_messages_for(:password).first %></strong>
            </span>
            <% end %>
            </div>
          </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, "", class: "col-md-5 col-form-label text-md-left" do %>
          パスワード確認
            <span class="ml-1 samazon-require-input-label">
              <span class="samazon-require-input-label-text">必須</span>
            </span>
          <% end %>
          <div class="col-md-7">
            <%=
              f.password_field :password_confirmation,
              class: "form-control samazon-login-input",
              autocomplete: "new-password"
            %>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn samazon-submit-button w-100">
            アカウント作成
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>