<div class = "row">
  <div class = "container-fluid row mx-auto">
    <div class="col-1">
      <%= link_to "←", items_path %>
    </div>
    
    <div class="col-2">
      <h3>No.<%= @item.no %></h3>
    </div>
    
    <div class = "col-1">
      <h3>A</h3>
    </div>
    
    <div class = "col-4">
      <h3><%= @item.name %></h3>
    </div>
    
    <div class = "col-4">
      <h3><%= @item.rarity %></h3>
    </div>
  </div>
  
  <div class = "container row mx-auto">
    <div class = "col-5">
      <%= @item.image %>
    </div>
    
    <div class = "col-7">
      <div class = " border rounded mb-3">
        <div class = "container row">
          <div class = "col-6">
            Category
          </div>
          <div class = "col-6">
            重量<%= @item.weight %>
          </div>
        </div>
        
        <div class = "container row">
          <div class = "col-6">
            Lv.<%= @item.max_lvl %> / <%= @item.max_lvl %>
          </div>
          <div class = "col-6">
            親密度<%= @item.weight %> / <%= @item.weight %>
          </div>
        </div>
        
        <hr class = "weapon-hr">
        
        <div class = "container row">
          <div class = "col-6">
            攻撃力<%= @item.max_atck %>
          </div>
          <div class = "col-6">
            攻速<%= @item.max_spd %> / s
          </div>
        </div>
      
        <div class = "container row">
          <div class = "col-6">
            残弾数<%= @item.max_bullet %>
          </div>
        </div>
        
      </div>
      
      <div class = "container">
        <div class = "row border-bottom">
          <div class = "col-6">
            <%= @item.skl_one %>
          </div>
          
          <div class = "col-6">
            <%= @item.skl_one_element %>
          </div>
        </div>
        
        <div>
          <%= @item.skl_one_detail %>
        </div>
        
      </div>
      
      <div class = "container my-2">
        <div class = "row border-bottom">
          <div class = "col-6">
            <%= @item.skl_two %>
          </div>
          
          <div class = "col-6">
            <%= @item.skl_two_element %>
          </div>
        </div>
        
        <div>
          <%= @item.skl_two_detail %>
        </div>
        
      </div>
    </div>
  </div>
</div>


