<div class="row">
  <div class="col-9">
    
    <div class = "container">
      <% if @items.present? %>
        <%= link_to "トップ", items_path %> > Category
      <% end %>
    </div>
    <div class="container mt-4">
      <div class="row w-100">

        <% @items.each do |item| %>
          <div class="card mx-2" style = "width: 13rem;">
            <%= link_to item_path(item) do %>
              <div class = "card-body">
                <p class="card-title">
                  ★<%= item.rarity %>
                </p>

                <%= image_tag "/images/goods.png", class: "img-thumbnail"%>

                <p class="card-text mt-2">No.<%= item.no %></p>
                <p class="card-text"><%= item.name %></p>
              </div>
              
            <% end %>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>