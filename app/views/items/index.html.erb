<h1>Items#index</h1>
<% @items.each do |item| %>
  <%= item.rarity %>
  <%= item.image %>
  <%= item.no %>
  <%= item.name %>
  <%= link_to "Show", item_path(item) %>
  <%= link_to "Edit", edit_item_path(item) %>
  <%= link_to "Delete", item_path(item), method: :delete, data: { confirm: 'Are you sure?' }  %>
<% end %>

<%= link_to "New", new_item_path %>