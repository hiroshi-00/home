<h3 class = "text-center">カテゴリー一覧</h3>

<table class="table mt-5">
  <thead>
    <tr>
      <th scope="col" class="w-25">ID</th>
      <th scope="col">カテゴリ</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% categories.each do |category| %>
    <tr>
      <th scope="row"><%= category.id %></td>
      <td><%= category.name %></td>
        <td>
          <%= link_to "編集", edit_dashboard_category_path(category), class: "dashboard-edit-link" %>
        </td>
      <td>
        <%= link_to "削除", dashboard_category_path(category), method: :delete, onclick: "event.preventDefault(); document.getElementById('logout-form').submit", class: "dashboard-delete-link" %>

      </td>

      <%= form_with(model:@category, method: :delete, local: true, id: "logout-form") do |f| %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate categories %>