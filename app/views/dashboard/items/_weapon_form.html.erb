<div class="form-group">
  <%= f.label "図鑑番号" %>
  <%= f.text_field :no, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "名前" %>
  <%= f.text_field :name, class: "form-control" %>
</div>

<%= f.fields_for :item_elements do |e| %>
  <div class="form-group">
    
    <%= e.label "属性" %>
    <%= e.collection_select :element_id, Element.all, :id, :name, { prompt: "選択してください" } , class: 'form-control' %>
  </div>
<% end %>

<div class="form-group">
  <%= f.label "画像" %>
  <%= f.file_field :image, class: "img-fluid", accept: 'image/jpeg,image/gif,image/png' %>
</div>

<div class="form-group">
  <%= f.label "レアリティー" %>
  <%= f.number_field :rarity, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "重量" %>
  <%= f.text_field :weight, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "最大レベル" %>
  <%= f.text_field :max_lvl, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "最大攻撃力" %>
  <%= f.text_field :max_atck, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "最大残弾数" %>
  <%= f.text_field :max_bullet, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "射速" %>
  <%= f.text_field :fire_spd, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "親密度" %>
  <%= f.text_field :closeness, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "進化前" %>
  <%= f.text_field :before_evl, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "進化後" %>
  <%= f.text_field :after_evl, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "覚醒絵" %>
  <%= f.text_field :kakusei, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "スキル名" %>
  <%= f.text_field :skl_name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "スキル詳細" %>
  <%= f.text_area :skl_detail, class: "form-control" %>
</div> 

<div class="form-inline mt-4 mb-4 row">
  <%= f.label "ピックアップ", class: "col-2 d-flex justify-content-start" %>
  <%= f.check_box :gacha, class: "form-control col-1" %>
</div>

<div class="form-inline mt-4 mb-4 row">
  <%= f.label "共鳴屋", class: "col-2 d-flex justify-content-start" %>
  <%= f.check_box :shop, class: "form-control col-1"%>
</div>